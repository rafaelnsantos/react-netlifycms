{
  "compilerOptions": {
    "target": "ES2015",
    "module": "ES2020",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "declaration": true,
    "sourceMap": true,
    "outDir": "lib/esm",
    "moduleResolution": "Node"
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}